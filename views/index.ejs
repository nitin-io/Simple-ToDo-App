<%- include('header.ejs') -%>
<div class="box">
  <h1 id="heading"><%= listTitle %></h1>
</div>
<div class="box">
  <% newTodoItems.forEach((element)=>{%>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkedbox" value="<%= element._id %>" onchange="this.form.submit()"/>
      <p><%= element.todo %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="todo" placeholder="New Item" autocomplete="off" />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include('footer.ejs') -%>
